<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <from-view-id>/content/comfirmRegistration.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/content/shoppingCart.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{cartBean.guest()}</from-action>
            <from-outcome>guest</from-outcome>
            <to-view-id>/content/order.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
      <navigation-rule>
        <from-view-id>/content/loginError.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>loginFailureBack</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>register</from-outcome> 
            <to-view-id>/content/registerAccount.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/content/categories.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>register</from-outcome> 
            <to-view-id>/content/registerAccount.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
     <navigation-rule>
        <from-view-id>/content/order.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>register</from-outcome> 
            <to-view-id>/content/registerAccount.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
      <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>cart</from-outcome> 
            <to-view-id>/content/shoppingCart.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/content/order.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>cart</from-outcome> 
            <to-view-id>/content/shoppingCart.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
     <navigation-rule>
        <from-view-id>/content/shoppingCart.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>cart</from-outcome> 
            <to-view-id>/content/shoppingCart.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/content/categories.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>cart</from-outcome> 
            <to-view-id>/content/shoppingCart.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/content/article.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>cart</from-outcome>
             <to-view-id>/content/shoppingCart.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/content/shoppingCart.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>register</from-outcome> 
            <to-view-id>/content/registerAccount.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/content/article.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>register</from-outcome> 
            <to-view-id>/content/registerAccount.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/content/registerAccount.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{registration.registered()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/content/comfirmRegistration.xhtml?accountID=#{registration.account.id}</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{categoryBean.showCategoryArticles()}</from-action>
            <from-outcome>show</from-outcome>
            <to-view-id>/content/categories.xhtml?categoryID=#{categoryBean.category.id}</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/content/categories.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{categoryBean.showCategoryArticles()}</from-action>
            <from-outcome>show</from-outcome>
            <to-view-id>/content/categories.xhtml?categoryID=#{categoryBean.category.id}</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/content/article.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{categoryBean.showCategoryArticles()}</from-action>
            <from-outcome>show</from-outcome>
            <to-view-id>/content/categories.xhtml?categoryID=#{categoryBean.category.id}</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/content/categories.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>display</from-outcome>
            <to-view-id>/content/article.xhtml?articlesID=#{articleBean.article.id}</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
